<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gwk.weathers.app"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17"/>

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.gwk.weathers.activity.ChooseAreaActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.gwk.weathers.activity.WeatherActivity"
            android:label="@string/title_activity_weather" >
        </activity>
        <activity android:name="com.gwk.weathers.activity.MainActivity" >
        </activity>
        <activity android:name="com.gwk.weathers.activity.LoadingActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.gwk.weathers.activity.TendencyActivity"
            android:label="@string/title_activity_tendency" >
        </activity>
    </application>

</manifest>
